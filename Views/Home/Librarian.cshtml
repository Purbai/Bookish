            <legend>New Librarian</legend>
            <p><label for="title">Name:</label>
                <input type="text" name="title" value="@Request.Form["Name"]" />
            </p>

            <p><input type="submit" name="buttonSubmit" value="Add Movie" /></p>
        </fieldset>
    </form>
}